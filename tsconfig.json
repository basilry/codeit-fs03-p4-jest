{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest", "./src/types/global"] 
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts", "src/types/**.d.ts"],
  "exclude": ["node_modules", "coverage", "__tests__", "jest.config.cjs", "babel.config.cjs"]
}